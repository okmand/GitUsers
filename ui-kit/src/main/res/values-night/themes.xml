<resources>
    <!-- Base application theme -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">?attr/backgroundContentColor</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/charcoal</item>
        <item name="colorSecondaryVariant">@color/smoke</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- StatusBar and NavigationBar color -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom color -->
        <item name="foregroundContentColor">@color/dark_gray</item>
        <item name="backgroundContentColor">@color/black</item>
    </style>
</resources>
